    <table class="pure-table">
        <thead>
            <tr>
                <th>Platform</th>
                <th>Profile</th>
            </tr>
        </thead>
        <tbody>
            {{#contact}}
                <tr>
                    <td>{{ host }}</td>
                    {{#url}}
                        <td>
                            <a href="{{ url }}">{{ profile }}</a>
                        </td>
                    {{/url}}
                    {{^url}}
                    <td>{{ profile }}</td>
                {{/url}}
            </tr>
        {{/contact}}
    </tbody>
</table></div>{{/hasContacts}}{{#hasDonate}}<div style="overflow-x: auto;">
