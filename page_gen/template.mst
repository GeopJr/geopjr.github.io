    <thead>
        <tr>
            <th>Platform</th>
            <th>Profile</th>
        </tr>
    </thead>
    <tbody>
        {{#donate}}
            <tr>
                <td>{{ host }}</td>
                {{#url}}
                    <td>
                        <a href="{{ url }}">{{ profile }}</a>
                    </td>
                {{/url}}
                {{^url}}
                <td>{{ profile }}</td>
            {{/url}}
        </tr>
    {{/donate}}
</tbody></table></div>{{/hasDonate}}</div>
